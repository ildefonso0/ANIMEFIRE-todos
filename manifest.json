{
  "manifest_version": 3,
  "name": "AnimeFire Downloader",
  "version": "1.0.0",
  "description": "Baixe epis√≥dios de anime do AnimeFire.plus com facilidade",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "https://animefire.plus/*",
    "https://*.animefire.plus/*",
    "*://*.mp4",
    "*://*/download/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AnimeFire Downloader"
  },
  "content_scripts": [
    {
      "matches": ["https://animefire.plus/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}